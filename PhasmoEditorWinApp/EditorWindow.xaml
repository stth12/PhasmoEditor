<Window x:Class="PhasmoEditor.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhasmoEditor v2.0.1" Height="500" Width="800" Background="Black">
    <Grid Width="780" Height="450">

        <TextBlock Text="PlayersMoney:" Margin="30,20,30,394" Foreground="White" RenderTransformOrigin="0.501,0.464" FontSize="20" FontWeight="Bold" Height="40"></TextBlock>
        <TextBox Name="PlayersMoneyTextBox" Margin="30,65,300,350" BorderBrush="White" Foreground="White" Background="Transparent" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectionBrush="White">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        
        <TextBlock Text="NewLevel:" Margin="30,120,30,290" Foreground="White" Width="720" Height="40" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="NewLevelTextBox" BorderBrush="White" Foreground="White" Background="Transparent" Margin="30,165,300,250" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectionBrush="White" Height="35" Width="450">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        
        <TextBlock Text="Prestige:" Margin="30,220,30,190" Foreground="White" Width="720" Height="40" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="PrestigeTextBox" BorderBrush="White" Foreground="White" Background="Transparent" Height="36" Margin="30,265,300,149" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectionBrush="White" Width="450">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Button Content="Next" Click="NextButton_Click" BorderBrush="Lime" Margin="650,380,30,20" Width="100" Height="50" Background="{x:Null}" BorderThickness="1,1,1,1" FontSize="14">
            <Button.Foreground>
                <SolidColorBrush Color="Lime" Opacity="1"/>
            </Button.Foreground>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
