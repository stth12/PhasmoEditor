<Window x:Class="PhasmoEditor.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhasmoEditor v2.0.1" Height="500" Width="800" Background="Black">
    <Grid RenderTransformOrigin="0.5,0.984" Width="780" Height="450" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Disclaimer" FontSize="30" Margin="30,20,30,385" Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Disabled" UseLayoutRounding="False" RenderTransformOrigin="0.5,0.5" TextAlignment="Center" FontWeight="Bold"/>
        <TextBlock Text="This project is intended for scientific and research purposes only. The author takes no responsibility for any negative consequences resulting from the use of this program or its components." FontSize="20" Margin="30,81,30,156" Foreground="White" ScrollViewer.VerticalScrollBarVisibility="Disabled" UseLayoutRounding="False" RenderTransformOrigin="0.5,0.5" TextAlignment="Center" TextWrapping="WrapWithOverflow"/>
        
        <Button Content="Accept" Click="NextButton_Click" BorderBrush="Lime" Margin="650,380,30,20" Width="100" Height="50" Background="{x:Null}" BorderThickness="1,1,1,1" FontSize="14">
            <Button.Foreground>
                <SolidColorBrush Color="Lime" Opacity="1"/>
            </Button.Foreground>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Content="Cancel" Click="CancelButton_Click" BorderBrush="Red" Margin="530,380,150,20" Width="100" Height="50" Background="Red" BorderThickness="1,1,1,1" FontSize="14">
            <Button.Foreground>
                <SolidColorBrush Color="White" Opacity="1"/>
            </Button.Foreground>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
